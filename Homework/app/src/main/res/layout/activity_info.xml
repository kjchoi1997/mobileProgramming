<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    tools:context=".Activities.InfoActivity">

    <LinearLayout
        android:id="@+id/mailLinear"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="30dp"
        android:layout_marginVertical="10dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/mailBtn"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:background="@drawable/message"
            android:text="메일 보내기"
            app:layout_constraintBaseline_toBaselineOf="@+id/locBtn"
            app:layout_constraintStart_toStartOf="parent" />

        <TextView
            android:id="@+id/textView10"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="문의메일 보내기"
            android:textColor="@color/design_default_color_on_secondary"
            android:textSize="30sp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/locLinear"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="30dp"
        android:layout_marginVertical="10dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/locBtn"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:background="@drawable/map"
            android:text="위치 보기"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/textView13"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="방문문의 위치 보기"
            android:textColor="@color/design_default_color_on_secondary"
            android:textSize="30sp" />
    </LinearLayout>

</LinearLayout>